<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - El_Tringulito</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ElTriangulitoP.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            @if (User.IsInRole("admin"))
            {
                @* Sidebar solo para admin *@
                <div class="col-md-2 bg-dark text-white min-vh-100 p-3">
                    <div class="text-center mb-4">
                        <div class="mb-3">
                            <img src="~/images/login-background.png" alt="Logo" class="img-fluid rounded-circle" style="width: 80px; height: 80px; object-fit: cover;" />
                        </div>
                        <h5 class="mb-1">@User.Identity?.Name</h5>
                        <small class="text-muted">Administrador</small>

                        <form class="logout-form mt-3" asp-controller="Auth" asp-action="Logout" method="post" id="logoutForm">
                            <button type="submit" class="btn btn-outline-light btn-sm btn-block">
                                <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                            </button>
                        </form>
                    </div>

                    <hr class="bg-secondary" />

                    <nav class="nav flex-column">
                        <a href="/Home" class="nav-link text-white"><i class="fas fa-tachometer-alt me-2"></i> Tablero de Administrador</a>
                        <a href="/Mesas" class="nav-link text-white"><i class="fas fa-chair me-2"></i> Mesas</a>
                        <a href="/Platos" class="nav-link text-white"><i class="fas fa-utensils me-2"></i> Platos</a>
                        <a href="/Bebidas" class="nav-link text-white"><i class="fas fa-wine-bottle me-2"></i> Bebidas</a>
                        <a href="/Combos" class="nav-link text-white"><i class="fas fa-boxes me-2"></i> Combos</a>
                        <a href="/Promociones" class="nav-link text-white"><i class="fas fa-tags me-2"></i> Promociones</a>
                        <a href="/Ordenes" class="nav-link text-white"><i class="fas fa-receipt me-2"></i> Órdenes</a>
                        <a href="/Cocina" class="nav-link text-white"><i class="fas fa-utensils me-2"></i> Cocina</a>
                    </nav>
                </div>
            }

            <div class="@(User.IsInRole("admin") ? "col-md-10" : "col-md-12") p-4">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
