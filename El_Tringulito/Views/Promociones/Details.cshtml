@model El_Tringulito.Models.Promociones

@{
    ViewData["Title"] = "Detalles de la Promoción";
    var nombrePlato = ViewBag.NombrePlato as string;
    var nombreCombo = ViewBag.NombreCombo as string;
}

<h1 class="mb-4">Detalles de la Promoción</h1>

<div class="card shadow p-4 bg-dark text-light">
    <dl class="row">
        <dt class="col-sm-3">Plato</dt>
        <dd class="col-sm-9">@(!string.IsNullOrEmpty(nombrePlato) ? nombrePlato : "—")</dd>

        <dt class="col-sm-3">Combo</dt>
        <dd class="col-sm-9">@(!string.IsNullOrEmpty(nombreCombo) ? nombreCombo : "—")</dd>

        <dt class="col-sm-3">Fecha de Inicio</dt>
        <dd class="col-sm-9">@Model.fecha_inicio?.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">Fecha de Fin</dt>
        <dd class="col-sm-9">@Model.fecha_fin?.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">Precio</dt>
        <dd class="col-sm-9">$@Model.precio?.ToString("F2")</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.id_promocion" class="btn btn-primary me-2">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>
