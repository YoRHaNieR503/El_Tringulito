@model IEnumerable<El_Tringulito.Models.Mesas>

@{
    ViewData["Title"] = "Mesas";
}

<h1>Mesas</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID Mesa</th>
            <th>Nombre</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mesa in Model)
        {
            <tr>
                <td>@mesa.id_mesa</td>
                <td>@mesa.nombre</td>
                <td>@mesa.estado</td>
                <td>
                    @if (mesa.estado == "Libre")
                    {
                        <a asp-action="Reservar" asp-route-id="@mesa.id_mesa" class="btn btn-primary">Reservar</a>
                    }
                    else
                    {
                        <a asp-action="VerOrden" asp-route-id="@mesa.id_mesa" class="btn btn-secondary">Ver Orden</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
