@model El_Tringulito.Models.Usuario

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4" style="width: 300px;">
        <h2 class="text-center">Login</h2>
        <form asp-action="Login" asp-controller="Auth" method="post">
            <div class="mb-3">
                <label for="usuario" class="form-label">Usuario</label>
                <input type="text" id="usuario" name="NombreUsuario" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="contrasenia" class="form-label">Contraseña</label>
                <input type="password" id="contrasenia" name="Contrasenia" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Entrar</button>
        </form>
    </div>
</div>

<style>
    body {
        background-color: #3498db;
    }
    .card {
        background: white;
        border-radius: 8px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>
